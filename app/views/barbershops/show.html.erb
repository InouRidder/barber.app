
<section class="form">
  <div class="row">
    <div class="col-sm-12 col-md-6 col-md-offset-3">
      <div class="center-container">
        <h2>Welcome to <%= @barbershop.name %> </h2>

        <h3>located @  <%= @barbershop.location %> </h3>

        <br>

        <p> This shop has the following barbers:

          <% @barbershop.barbers.each do |barber| %>

          <li> <%= link_to "#{barber.name}", barber_path(barber) %></li>
          <% end %>

        </p>

      </div>
    </div>
  </div>
</section>
