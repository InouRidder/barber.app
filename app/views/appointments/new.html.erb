<div class="container">
  <div class="row">
    <div>
      <h2>New appointment with <%= @barber.name %> </h2>

      <h4>
        Availability
      </h4>
      <%= simple_form_for ([@barber, @appointment]) do |f| %>
      <%= f.input :date, as: :datetime, html5: true %>
      Select your Service
      <%= f.select :service, @services %>

      Select your drink
      <%= f.select :drink, @drinks %>
      <p>
      <%= f.button :submit %>
    </p>

    <% end %>
  </div>
</div>
</div>


